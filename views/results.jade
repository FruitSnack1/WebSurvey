doctype html
html(lang='cz', dir='ltr')
  head
    meta(charset='utf-8')
    link(rel='stylesheet', href='../css/main2.css')
    link(rel='stylesheet', href='../css/results.css')
    link(rel='stylesheet', href='../css/odometer-theme-default.css')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.3.1/css/all.css', integrity='sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU', crossorigin='anonymous')
    title
  body
    div.content-container
      div.content
        div.container
          div.graph-container
            div.graph-container-values
              span#bar1-value
              span#bar2-value
              span#bar3-value
              span#bar4-value
              span#bar5-value
            div.bars
              div#bar1
              div#bar2
              div#bar3
              div#bar4
              div#bar5
            div.names
              span Ano
              span Spíš ano
              span Neutral
              span Spíš ne
              span Ne
          div.data-container
            h3.data-name 
            ul.data-list
              li.item
                span.data-list-item-name Vyplněných anket:
                span.data-list-item-value#quiz_count.odometer 0
              li.item
                span.data-list-item-name Průměrný čas:
                span.data-list-item-value#time 0 
              li.item
                span.data-list-item-name Počet mužů:
                span.data-list-item-value#male_count 0
              li.item
                span.data-list-item-name Počet žen:
                span.data-list-item-value#female_count 0
              li.item
                span.data-list-item-name Počet otázek:
                span.data-list-item-value#questions_count 0
                script(type='text/javascript').
                  var local_data =!{JSON.stringify(result)}
                  var name =!{JSON.stringify(target)}
                
            div.data-container-excel-container
              //- button.data-container-excel(onclick='download();').btn.btn-confirm
              //-   i.fas.fa-file-excel.data-container-icon
              //-   span.data-container-span     Výsledky v excelu
              button.data-container-chart.btn.btn-confirm(onclick='showCharts();') 
                i.fas.fa-chart-pie.data-container-icon
                span.data-container-span     Grafy otázek
              span Stáhnout výsledky :
              div.btn-small-container
                button.data-container-chart.btn.btn-small(onclick="getJsonResults();") 
                  i.fas.fa-file-code.data-container-icon
                  span.data-container-span  JSON   
                button.data-container-chart.btn.btn-small(onclick='getCsvResults();') 
                  i.fas.fa-file-csv.data-container-icon
                  span.data-container-span  CSV   
          div.results-chart-container(style='display:none;')
            //- div.chart
            //-   canvas(id='myChart')
                
    script(type='text/javascript', src='../js/jquery-3.3.1.min.js')
    script(type='text/javascript').
      var local_data =!{JSON.stringify(result)}
      var name =!{JSON.stringify(name)}
    script(type='text/javascript', src='../js/odometer.js')
    script(type='text/javascript', src='../js/results.js')
    //- script(type='text/javascript' src='../js/settings.js')
